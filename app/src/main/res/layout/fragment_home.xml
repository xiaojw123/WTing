<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/home_vp"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">


            <LinearLayout
                style="@style/home_rank_style_container"
                >



            <ImageView
                style="@style/home_rank_style_icon"
                android:src="@mipmap/ic_mv"
                />


            <TextView
                style="@style/home_rank_style_text"
                android:text="@string/recommend_mv"
                />



            </LinearLayout>

            <LinearLayout
                style="@style/home_rank_style_container"
                >



                <ImageView
                    style="@style/home_rank_style_icon"
                    android:src="@mipmap/ic_songer"
                    />


                <TextView
                    style="@style/home_rank_style_text"
                    android:text="@string/songer_rank"
                    />



            </LinearLayout>

            <LinearLayout
                style="@style/home_rank_style_container"
                >



                <ImageView
                    style="@style/home_rank_style_icon"
                    android:src="@mipmap/ic_songlist"
                    />


                <TextView
                    style="@style/home_rank_style_text"
                    android:text="@string/song_rank"
                    />



            </LinearLayout>
            <LinearLayout
                style="@style/home_rank_style_container"
                >



                <ImageView
                    style="@style/home_rank_style_icon"
                    android:src="@mipmap/ic_rank"
                    />


                <TextView
                    style="@style/home_rank_style_text"
                    android:text="@string/list_rank"
                    />



            </LinearLayout>
        </LinearLayout>






        <TextView
            style="@style/home_category_title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="最新音乐 >"
            />



              <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_newsong_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            style="@style/home_category_title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="推荐MV >"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_mv_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            style="@style/home_category_title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="精选电台 >"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_radio_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            style="@style/home_category_title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="精选专辑 >"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_album_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>